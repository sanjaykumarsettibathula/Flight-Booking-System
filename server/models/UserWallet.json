{
  "name": "UserWallet",
  "type": "object",
  "properties": {
    "balance": {
      "type": "number",
      "description": "Current wallet balance in INR",
      "default": 50000
    },
    "transactions": {
      "type": "array",
      "description": "Transaction history",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["credit", "debit"]
          },
          "amount": {
            "type": "number"
          },
          "description": {
            "type": "string"
          },
          "date": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["balance"]
}
